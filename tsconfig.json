{
  "compilerOptions": {
    "module": "CommonJS",
    "removeComments": true,
    "sourceMap": true,
    "target": "ES6",
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/node_modules/*", "dist"]
}
